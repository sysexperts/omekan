# Omekan Environment Configuration

# Database Configuration
DB_HOST=mysql
DB_NAME=omekan
DB_USER=root
DB_PASS=root
DB_PORT=3306

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_NAME="Omekan Event Platform"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=/uploads

# Email Configuration (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Omekan Platform"

# Push Notifications (VAPID Keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# Security Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSP_ENABLED=true
RATE_LIMIT_ENABLED=true

# Social Login (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_URL=https://cdn.yourdomain.com
CDN_BUCKET=your-s3-bucket

# Monitoring & Logging
LOG_LEVEL=info
LOG_CHANNEL=daily
SENTRY_DSN=your-sentry-dsn

# Performance Configuration
ENABLE_GZIP=true
ENABLE_BROWSER_CACHE=true
CACHE_STATIC_ASSETS=true

# Development Configuration (set to false in production)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_QUERY_LOG=false
