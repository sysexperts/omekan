{
    "name": "omekan/backend",
    "description": "Omekan Event Platform Backend API",
    "type": "project",
    "version": "2.0.0",
    "keywords": ["event", "platform", "api", "php", "mysql"],
    "license": "MIT",
    "authors": [
        {
            "name": "Omekan Team",
            "email": "dev@omekan.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.5",
        "guzzlehttp/guzzle": "^7.8",
        "intervention/image": "^2.7",
        "phpmailer/phpmailer": "^6.8",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "phpunit/php-code-coverage": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Omekan\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omekan\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "lint": "phpcs --standard=PSR12 src/",
        "lint:fix": "phpcbf --standard=PSR12 src/",
        "analyze": "phpstan analyse src/ --level=8",
        "serve": "php -S localhost:8000 -t public/",
        "migrate": "php scripts/migrate.php",
        "seed": "php scripts/seed.php",
        "clear-cache": "php scripts/clear-cache.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
