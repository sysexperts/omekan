{
  "name": "omekan-frontend",
  "version": "2.0.0",
  "description": "Modern Event Platform Frontend",
  "main": "js/events.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "serve": "http-server . -p 8080 -c-1",
    "pwa:generate-icons": "pwa-asset-generator images/icon-base.svg images/ --manifest manifest.json",
    "lighthouse": "lighthouse http://localhost/frontend/events.html --output=json --output-path=./lighthouse-report.json",
    "analyze": "webpack-bundle-analyzer dist/bundle.js"
  },
  "keywords": [
    "events",
    "pwa",
    "community",
    "frontend",
    "javascript"
  ],
  "author": "Omekan Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-bundle-analyzer": "^4.10.1",
    "http-server": "^14.1.1",
    "pwa-asset-generator": "^6.3.1"
  },
  "dependencies": {
    "workbox-webpack-plugin": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "globals": {
      "EventsManager": "readonly",
      "EventModal": "readonly",
      "AuthManager": "readonly",
      "PWAManager": "readonly",
      "AnalyticsManager": "readonly"
    }
  }
}
